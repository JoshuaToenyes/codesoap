    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}">

    {{! Everything else gets inserted here }}
    {{{body}}}

    <footer class="site-footer">
        <a class="rss subscribe icon-feed" href="{{@blog.url}}/rss/"><span class="tooltip">Subscribe</span></a>
        <a class="twitter subscribe icon-twitter" href="http://twitter.com/JoshuaToenyes"><span class="tooltip">Follow</span></a>
        <div class="inner">
             <section class="copyright">&copy; {{date format="YYYY"}} <a href="{{@blog.url}}/">Joshua Toenyes</a> &bull; All rights reserved.</section>
             <section class="poweredby">Published with <a rel="nofollow" class="icon-ghost" href="https://ghost.org">Ghost</a></section>
        </div>
    </footer>

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

