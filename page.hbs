{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

<nav class="page-nav" ontouchstart="">
    <span title="Show navigation menu.">&#x2630;</span>
    <ul>
        <li><a href="/">home</a></li>
        <li><a href="/about">about me</a></li>
        <li><a href="/contact">contact</a></li>
    </ul>
</nav>

<main class="content" role="main" ontouchstart="">

    <article class="{{post_class}}">

        <header class="post-header">
            <a class="blog-logo" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{asset "img/codesoap-black.svg"}}" alt="Blog Logo" />
                {{else}}
                    <span class="blog-title">{{@blog.title}}</span>
                {{/if}}
            </a>
            <hr style="margin: 40px 0 0 0;"/>
        </header>

        {{#post}}

            <section class="post-content">
                {{content}}
            </section>

        {{/post}}

    </article>

</main>
